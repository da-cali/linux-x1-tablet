--- scripts/dtc/include-prefixes/arc/axc003_idu.dtsi	2017-08-30 04:32:30.000000000 -0400
+++ scripts/dtc/include-prefixes/arc/axc003_idu.dtsi	2017-09-03 16:56:17.000000000 -0400
@@ -14,15 +14,15 @@
 
 / {
 	compatible = "snps,arc";
-	#address-cells = <1>;
